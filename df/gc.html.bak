    <!--以下是一個拼湊出來的倒計時器,三個函數功能分別是:顯示現在的時間;顯示還有多少天;顯示還有多少秒-->
    <script>
				function checkTime(i) 
				{
			        	if (i < 10) {i = "0" + i};  // add zero in front of numbers < 10
			        	return i;
			  }
				function showTime()
				{
			    var now=new Date();//現在的時間
			    var strDate ='' ;
			    var campdate2 = new Date(strDate.replace("-", "/").replace("-", "/"));//沒用的,試驗品
			    var campdate = new Date(2017,3,10);//camp 的時間,函數的輸入參數格式是(int,int,int)不是整個string
			    var year= now.getFullYear()  ;//獲取年份
			    var month=  now.getMonth()+1 ;//獲取月份
			    var day=  now.getDate()  ;//獲取日期
			    var h=  now.getHours()  ;
			    var m=  now.getMinutes()  ;
			    var s=  now.getSeconds()  ;
			    var secondleft= Math.ceil((campdate.getTime() - now.getTime())/1000)+3600 ;//相差毫秒數除以1000再往上取整數,結果為整數
			    var dayleft= Math.ceil(secondleft/(24 * 3600) * 1000)/1000 ;//秒數除以一天的總秒數,得出天數,保留小數,約分
			    m=checkTime(m)
			    s=checkTime(s)
			
			    var weekday=new Array(7)//數組
			    weekday[0]="星期日"
			    weekday[1]="星期一"
			    weekday[2]="星期二"
			    weekday[3]="星期三"
			    weekday[4]="星期四"
			    weekday[5]="星期五"
			    weekday[6]="星期六"
			
			    document.getElementById("now").innerHTML=""+year+"年"+month+"月"+day+"日 "+  weekday[now.getDay()] +h+":"+m+":"+s;
			    document.getElementById('second').innerHTML = secondleft;
			    document.getElementById('day').innerHTML = ""+dayleft;
			    setTimeout('showTime()',500)//每過五百毫秒運行一次本函數
			  }
    </script>
